{
	"name": "@abcnews/palette",
	"version": "1.0.0-2",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"package": "svelte-package",
		"test": "",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"release": "np",
		"version": "npm run package"
	},
	"engines": {
		"node": ">=18"
	},
	"np": {
		"branch": "main",
		"yarn": false
	},
	"devDependencies": {
		"@sveltejs/kit": "^1.22.1",
		"@sveltejs/package": "^2.1.0",
		"@types/d3-array": "^3.0.2",
		"@types/d3-dsv": "^3.0.0",
		"@types/d3-interpolate": "^3.0.1",
		"@types/d3-scale": "^4.0.2",
		"d3-array": "^3.1.1",
		"d3-dsv": "^3.0.1",
		"layercake": "^7.6.0",
		"micromatch": "^4.0.4",
		"np": "^8.0.4",
		"prettier": "^2.0.0",
		"prettier-plugin-svelte": "^2.4.0",
		"svelte-check": "^3.4.5",
		"svelte-preprocess": "^5.0.4",
		"svelte2tsx": "^0.6.19",
		"tslib": "^2.3.1",
		"typescript": "^5.1.6",
		"typescript-transform-extensions": "^1.0.1",
		"vite": "^4.4.2"
	},
	"peerDependencies": {
		"svelte": "^3.0.0"
	},
	"type": "module",
	"dependencies": {
		"d3-interpolate": "^3.0.1",
		"d3-scale": "^4.0.2"
	},
	"exports": {
		"./package.json": "./package.json",
		"./colours": {
			"types": "./dist/colours.d.ts",
			"default": "./dist/colours.js"
		},
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./palettes": {
			"types": "./dist/palettes.d.ts",
			"default": "./dist/palettes.js"
		},
		"./scales": {
			"types": "./dist/scales.d.ts",
			"default": "./dist/scales.js"
		}
	},
	"files": [
		"dist"
	],
	"svelte": "./dist/index.js",
	"typesVersions": {
		">4.0": {
			"colours": [
				"./dist/colours.d.ts"
			],
			"index.d.ts": [
				"./dist/index.d.ts"
			],
			"palettes": [
				"./dist/palettes.d.ts"
			],
			"scales": [
				"./dist/scales.d.ts"
			]
		}
	}
}
